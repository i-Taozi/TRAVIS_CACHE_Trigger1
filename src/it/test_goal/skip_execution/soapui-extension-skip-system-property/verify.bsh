import java.io.*;

try {
  System.out.println("Verifying that tests have not runned");
  File logFile = new File(basedir, "build.log");
  String fileContent = org.codehaus.plexus.util.FileUtils.fileRead(logFile, "UTF-8");
  
  String runnerInitLog = "Maven2 TestCase Runner";
  if (fileContent.indexOf(runnerInitLog) >= 0) {
    System.err.println("FAILED! Tests have runned");
    return false;
  }
  
  if (fileContent.indexOf("SoapUI execution is skipped.") < 0) {
    System.err.println("FAILED! Skipping execution logs cannot be found");
    return false;
  }
  
  System.out.println("OK");
  return true;  
}
catch(Throwable t) {
    t.printStackTrace();
    return false;
}
